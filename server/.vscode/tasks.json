{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start FastAPI Server",
			"type": "shell",
			"command": "poetry",
			"args": [
				"run",
				"uvicorn",
				"main:app",
				"--reload",
				"--host",
				"0.0.0.0",
				"--port",
				"8000"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			}
		}
	]
}